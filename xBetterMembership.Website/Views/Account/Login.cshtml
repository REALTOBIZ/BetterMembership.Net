@model BetterMembership.Website.Models.LoginModel

@{
    this.ViewBag.Title = "Log in";
}

<hgroup class="title">
    <h1>@this.ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
    <h2>Use a local account to log in.</h2>
    @using (this.Html.BeginForm(new { this.ViewBag.ReturnUrl }))
    {
        @this.Html.AntiForgeryToken()
        @this.Html.ValidationSummary(true)

        <fieldset>
            <legend>Log in Form</legend>
            <ol>
                <li>
                    @this.Html.LabelFor(m => m.UserName)
                    @this.Html.TextBoxFor(m => m.UserName)
                    @this.Html.ValidationMessageFor(m => m.UserName)
                </li>
                <li>
                    @this.Html.LabelFor(m => m.Password)
                    @this.Html.PasswordFor(m => m.Password)
                    @this.Html.ValidationMessageFor(m => m.Password)
                </li>
                <li>
                    @this.Html.CheckBoxFor(m => m.RememberMe)
                    @this.Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                </li>
            </ol>
            <input type="submit" value="Log in" />
        </fieldset>
        <p>
            @this.Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
    }
</section>

<section class="social" id="socialLoginForm">
    <h2>Use another service to log in.</h2>
    @this.Html.Action("ExternalLoginsList", new { this.ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
